@model List<Parque>
@{
    ViewData["Title"] = "NatuARG | Parques Nacionales de Argentina";
}

<div class="portada">
    <div class="text-box">
        <h1 class="heading-primary">
            <span class="heading-primary-main">Parques Nacionales</span>
            <span class="heading-primary-sub">Vivamos la naturaleza argentina juntos</span>
        </h1>
        <a href="#" class="btnMe btnMe-white btnMe-animated">Ver Tours</a>
    </div>
</div>
<div class="container mt-4 mb-4">
    <div class="container text-center">
        <h1 class="titulo heading-primary-main">Destinos</h1>
        <div class="linea"></div>
        <br>
    </div>
    <div class="row justify-content-center">
        @foreach (var parque in Model)
        {
        <div class="card cardMe col-3 m-2" style="width: 18rem;">
            <img src="~/img/@parque.Imagen" class="card-img-top" alt="...">
            <div class="card-body">
                <h5>@parque.Nombre</h5>
                <p class="card-text">@parque.Descripcion</p>

            </div>
            @Html.ActionLink("Ver Mas", "Index", "Atracciones", new { id = parque.Id}, new { @class = "btnCard" })
        </div>
        }
    </div>
</div>
